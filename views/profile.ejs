<body>
  <!-- <div class="container"> -->

    <!-- <div class="page-header text-center"> -->


    <section class="main">
      <h1> Alchemy House </h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </section>

    <!-- LOCAL INFORMATION -->
    <div class="col-sm-6">
      <div class="well">
        <h3><span class="fa fa-user"></span> Local</h3>

        <% if (user.local.email) { %>
        <p>
          <strong>id</strong>: <%= user._id %><br>
          <strong>email</strong>: <%= user.local.email %><br>
          <strong>password</strong>: <%= user.local.password %>
        </p>

        <a href="/unlink/local" class="btn btn-default">Unlink</a>
        <% } else { %>
        <a href="/connect/local" class="btn btn-default">Connect Local</a>
        <% } %>

      </div>
    </div>

    <!-- Add a workout -->
    <% if (user.local.email) { %>
    <form class="form" action="/messages" method="POST">

      <section class="workoutType">
        <legend>Select an area:</legend>

        <input type="radio" id="legs" name="area" value="legs" checked>
        <label for="legs">Legs</label>

        <input type="radio" id="back" name="area" value="back">
        <label for="back">Back</label>

        <input type="radio" id="arms" name="area" value="arms">
        <label for="arms">Arms</label>

        <input type="radio" id="chest" name="area" value="chest">
        <label for="chest">Chest</label>

        <input type="radio" id="shoulders" name="area" value="shoulders">
        <label for="shoulders">Shoulders</label>

        <input type="radio" id="core" name="area" value="core">
        <label for="core">Core</label>
      </section>

      <section class="workoutDetails">
        <input type="text" placeholder="Username" value="<%= user.local.email %>" name="name">
        <input type="text" placeholder="Exercise" name="msg">
        <input type=" number" placeholder="Sets" name="msg">
        <input type="text" placeholder="reps" name="msg">
        <button type="submit">Log</button>
      </section>


    </form>
    <% } %>

  <!-- User Workout Logs -->
  <section class="workoutLogList">
    <ul class="messages">
      <% for(var i=0; i<messages.length; i++)
      {%>
        if () {

        }
